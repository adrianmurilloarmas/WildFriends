<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_ad_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/title_ad_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="TextView"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/options_ad_button"
        app:layout_constraintEnd_toStartOf="@+id/options_ad_button"
        app:layout_constraintStart_toEndOf="@+id/img_ad_list"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/options_ad_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/config_dots"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_ad_list"
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_ad_list"
        app:layout_constraintTop_toBottomOf="@+id/title_ad_list" />

</androidx.constraintlayout.widget.ConstraintLayout>